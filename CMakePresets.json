{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-windows",
      "description": "Windows base settings (MSVC)",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "23"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-debug-shared",
      "displayName": "Windows Debug (DLL)",
      "description": "Shared libraries build (Shared)",
      "inherits": "base-windows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "windows-debug-static",
      "displayName": "Windows Debug (Static)",
      "description": "Static libraries build (Single executable)",
      "inherits": "base-windows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "OFF",
        "SFML_STATIC_LIBRARIES": "ON"
      }
    },
    {
      "name": "windows-release-shared",
      "displayName": "Windows Release (DLL)",
      "inherits": "windows-debug-shared",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-release-static",
      "displayName": "Windows Release (Static)",
      "inherits": "windows-debug-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}