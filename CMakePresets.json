{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-windows",
      "description": "Windows base settings (MSVC)",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "23"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "base-debug-static",
      "hidden": true,
      "description": "Static libraries build (Single executable)",
      "inherits": "base-windows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "OFF",
        "SFML_STATIC_LIBRARIES": "ON"
      }
    },
    {
      "name": "base-debug-shared",
      "hidden": true,
      "description": "Shared libraries build (Shared)",
      "inherits": "base-windows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "render-sfml",
      "hidden": true,
      "cacheVariables": {
        "RE_RENDER_BACKEND": "SFML"
      }
    },
    {
      "name": "render-glfw",
      "hidden": true,
      "cacheVariables": {
        "RE_RENDER_BACKEND": "GLFW"
      }
    },
    {
      "name": "windows-debug-static-glfw",
      "displayName": "Windows Debug (Static + GLFW)",
      "description": "Static libraries build (Single executable) with OpenGL/GLFW backend",
      "inherits": [
        "base-debug-static",
        "render-glfw"
      ]
    },
    {
      "name": "windows-debug-static-sfml",
      "displayName": "Windows Debug (Static + SFML)",
      "description": "Static libraries build (Single executable) with SFML backend",
      "inherits": [
        "base-debug-static",
        "render-sfml"
      ]
    },
    {
      "name": "windows-debug-shared-glfw",
      "displayName": "Windows Debug (DLL + GLFW)",
      "description": "Static libraries build (Single executable) with OpenGL/GLFW backend",
      "inherits": [
        "base-debug-shared",
        "render-glfw"
      ]
    },
    {
      "name": "windows-debug-shared-sfml",
      "displayName": "Windows Debug (DLL + SFML)",
      "description": "Static libraries build (Single executable) with SFML backend",
      "inherits": [
        "base-debug-shared",
        "render-sfml"
      ]
    },
    {
      "name": "windows-release-shared-glfw",
      "displayName": "Windows Release (DLL + GLFW)",
      "inherits": "windows-debug-shared-glfw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-release-static-glfw",
      "displayName": "Windows Release (Static + GLFW)",
      "inherits": "windows-debug-static-glfw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-release-shared-sfml",
      "displayName": "Windows Release (DLL + SFML)",
      "inherits": "windows-debug-shared-sfml",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-release-static-sfml",
      "displayName": "Windows Release (Static + SFML)",
      "inherits": "windows-debug-static-sfml",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}